{% extends 'base.html.twig'%}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}


{% block body %}

    {# Création du form avec twig #}

    {# Permet de générer un titre différent selon la page (création ou modfication de l'article#}
    {%if editMode %}
        <h1>Modifier vôtre article</h1>
    {% else %}
        <h1>Création d'un article</h1>
    {% endif %}

    {# Gestion du forme avec les différente option du attr
    Twig + BlogContronller Create pour le form #}
    {{ form_start(formArticle) }}
    {{ form_row(formArticle.Title,{'attr':{'placeholder':"Titre de l'article"}}) }}
    {{ form_row(formArticle.content,{'attr':{'placeholder':"Contenue de l'article"}}) }}
    {{ form_row(formArticle.image,{'attr':{'placeholder':"Url de l'image"}}) }}
    {# Permet de generer different bouton si l'article est nouveau ou modifié grace a la condition if #}
    <button type="submit" class="btn btn-success">
        {%if editMode %}
        Enregistrer les modifications
        {% else %}
        Ajouter l'article
        {% endif %}
    </button>
    {{ form_end(formArticle) }}

{% endblock %}