{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="article">

{% for articls in articles %}
    <article>
        <h2>{{articls.Title}}</h2>
        <div class="metadata">Ecrit le {{ articls.createdAt | date('d/m/Y') }} Ã  {{ articls.createdAt | date('H:i')}} dans la categorie politique</div>
        <div class="content">
            <img src="{{ articls.image }}" alt="">
          {{articls.content | raw}}
            <a href="{{path('blog_show',{'id': articls.id})}}" class="btn-primary">Lire la suite</a>
        </div>
</article>
{% endfor %}


</section>
{% endblock %}